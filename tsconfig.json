{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2019",
      "es2020.bigint",
      "es2020.string",
      "es2020.symbol.wellknown"
    ],
    "sourceMap": true,
    "downlevelIteration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "@watcourses/*": [
        "App/*"
      ]
    },
    "useDefineForClassFields": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/typings/"
  ],
  "exclude": [
    "node_modules",
    "e2e",
    "test",
    "bin",
    "dist",
    "build",
    "static",
    "config",
    "public",
    "scripts",
    "stories",
    "is-dev-server-on.js"
  ]
}
