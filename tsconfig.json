{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2019",
      "es2020.bigint",
      "es2020.string",
      "es2020.symbol.wellknown",
      "dom"
    ],
    "sourceMap": true,
    "downlevelIteration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "rootDirs": ["src"],
    "baseUrl": "./src",
    "paths": {
      "@watcourses": ["App"],
      "@watcourses/*": ["App/*"]
    }
  },
  "include": [
    "src/typings/"
  ]
}
